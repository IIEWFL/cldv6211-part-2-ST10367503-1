@model IEnumerable<VenueBookingSystem.Models.Venue>

@{
    ViewData["Title"] = "Venues";
}

<h1>Venue List</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Capacity</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var venue in Model)
        {
            <tr>
                <td>@venue.Name</td>
                <td>@venue.Location</td>
                <td>@venue.Capacity</td>
                <td>
                    @if (!string.IsNullOrEmpty(venue.ImageUrl))
                    {
                        <img src="@venue.ImageUrl" alt="Venue Image" width="100" />
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
